<% if @url %>
  <%= link_to @url, class: classes, data: data_attributes do %>
    <%= render_icon if leading_icon? %>
    <%= content %>
    <%= render_icon if trailing_icon? %>
  <% end %>
<% else %>
  <%= content_tag :button,
    class: classes,
    data: data_attributes,
    disabled: @disabled,
    type: @type do %>
    <%= render_icon if leading_icon? %>
    <%= content %>
    <%= render_icon if trailing_icon? %>
  <% end %>
<% end %>
