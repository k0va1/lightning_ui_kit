<%= tag.div(
  class: classes,
  data:
) do %>
  <% if @label %>
    <%= tag.label(
      @label,
      class: "lui:text-base/6 lui:text-zinc-950 lui:select-none lui:data-disabled:opacity-50 lui:sm:text-sm/6",
      data: label_data
    ) %>
  <% end %>
  <% if @description %>
    <%= tag.p(
      @description,
      class: "lui:text-base/6 lui:text-zinc-500 lui:data-disabled:opacity-50 lui:sm:text-sm/6",
      data: description_data
    ) %>
  <% end %>
  <div data-slot="control">
    <input
      type="hidden"
      name="<%= hidden_field_name %>"
      value="<%= serialized_value %>"
      data-lui-jsonb-target="hiddenField"
    />
    <div data-lui-jsonb-target="rowsContainer" class="lui:space-y-2">
    </div>
    <% unless @disabled %>
      <button
        type="button"
        data-action="click->lui-jsonb#addRow"
        class="lui:mt-3 lui:inline-flex lui:items-center lui:gap-1.5 lui:text-sm lui:font-medium lui:text-blue-600 lui:hover:text-blue-700 lui:transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="lui:size-4">
          <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
        </svg>
        <%= add_button_text %>
      </button>
    <% end %>
  </div>
  <% if has_errors? %>
    <%= tag.p(
      error_messages,
      class: "lui:text-base/6 lui:text-red-600 lui:data-disabled:opacity-50 lui:sm:text-sm/6",
      data: error_data
    ) %>
  <% end %>
<% end %>
