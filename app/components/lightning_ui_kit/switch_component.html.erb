<%= tag.div(class: classes, data: data) do %>
  <%= render_label %>
  <% if @description %>
    <%= tag.p(
      @description,
      class: "lui:text-base/6 lui:text-foreground-muted lui:data-disabled:opacity-50 lui:sm:text-sm/6",
      data: description_data
    ) %>
  <% end %>
  <% if has_errors? %>
    <%= tag.p(
      error_messages,
      class: "lui:text-base/6 lui:text-destructive-text lui:data-disabled:opacity-50 lui:sm:text-sm/6",
      data: error_data
    ) %>
  <% end %>
  <%= tag.button(
    class: button_classes,
    aria: button_aria,
    role: "switch",
    type: "button",
    tabindex: 0,
    data: button_data
  ) do %>
    <%= tag.span(aria: { hidden: true }, class: knob_classes) %>
    <%= render_hidden_field %>
  <% end %>
<% end %>
