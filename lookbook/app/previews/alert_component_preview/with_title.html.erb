<%= render LightningUiKit::AlertComponent.new(title: "Heads up!") do |alert| %>
  <p>You can add components to your app using the CLI.</p>
<% end %>

<br>

<%= render LightningUiKit::AlertComponent.new(type: :error, title: "Error occurred") do |alert| %>
  <p>2 errors prohibited this parse from being saved:</p>
  <ul class="lui:mt-2 lui:list-disc lui:list-inside">
    <li>Error 1</li>
    <li>Error 2</li>
  </ul>
  <% alert.with_footer do %>
    <div class="lui:flex lui:gap-2">
      <%= render LightningUiKit::ButtonComponent.new(size: :small).with_content("Contact support") %>
      <%= render LightningUiKit::ButtonComponent.new(style: :outline, size: :small, data: { action: "lui-alert#close"}).with_content("Close") %>
    </div>
  <% end %>
<% end %>

<br>

<%= render LightningUiKit::AlertComponent.new(type: :success, title: "Success!") do |alert| %>
  <p>Your changes have been saved successfully.</p>
<% end %>

<br>

<%= render LightningUiKit::AlertComponent.new(type: :warning, title: "Warning") do |alert| %>
  <p>Your trial expires in 3 days. Upgrade to keep access.</p>
<% end %>
