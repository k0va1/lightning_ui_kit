<%= render LightningUiKit::ModalComponent.new(id: "payment", title: "Payment") do |modal| %>
  <% modal.with_body do %>
    <%= render LightningUiKit::InputComponent.new(
      name: :card_number,
      label: "Card number",
      description: "Enter your card number"
    ) %>
  <% end %>

  <% modal.with_action do %>
    <%= render LightningUiKit::ButtonComponent.new(
      style: :outline,
      data: { action: "click->lui-modal#close" }
    ).with_content("Cancel") %>
  <% end %>

  <% modal.with_action do %>
    <%= render LightningUiKit::ButtonComponent.new(
      type: :submit,
      data: { action: "click->lui-modal#close" }
    ).with_content("Pay") %>
  <% end %>
<% end %>

<%= render LightningUiKit::ButtonComponent.new(data: {action: "click->lui-main#openModal", controller: "lui-main", target: "payment"}) do %>
  Open modal
<% end %>
